<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.App.StartingTheme" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">#86A788</item>
        <item name="postSplashScreenTheme">@style/Base.Theme.MovieBooking</item>
        <item name="android:windowSplashScreenAnimatedIcon">@drawable/animated_logo</item>
    </style>
    <!--
    Having themes.xml for v31 variant because @android:dimen/system_app_widget_background_radius
     and @android:dimen/system_app_widget_internal_padding requires API level 31
    -->
    <style name="Base.Theme.MovieBooking.AppWidgetContainerParent" parent="@android:style/Theme.DeviceDefault.DayNight">
        <item name="appWidgetRadius">@android:dimen/system_app_widget_background_radius</item>
        <item name="appWidgetInnerRadius">@android:dimen/system_app_widget_inner_radius</item>
    </style>
</resources>