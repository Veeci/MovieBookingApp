<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:baselineAligned="false"
    android:padding="@dimen/_5sdp"
    android:layout_marginBottom="@dimen/_10sdp"
    android:background="@drawable/rounded_cast_gr"
    android:orientation="horizontal"
    android:weightSum="6">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="2"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center">

        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardCornerRadius="@dimen/_40sdp">

            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="@dimen/_60sdp"
                android:layout_height="@dimen/_60sdp"
                android:id="@+id/avatarPath"
                android:scaleType="centerCrop" />

        </androidx.cardview.widget.CardView>

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/rating"
            android:drawableStart="@drawable/ic_user_score"
            android:drawablePadding="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_5sdp"
            android:text="10"
            android:textColor="@color/ThemeSecondary"
            android:textSize="@dimen/_13sdp"
            android:fontFamily="@font/montserrat" />

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_marginTop="@dimen/_3sdp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/createdAt"
            android:textColor="@color/light_gray"
            android:textSize="@dimen/_12sdp"
            android:fontFamily="@font/montserrat_italic" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="4"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="@dimen/_5sdp">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/author"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/_14sdp"
            android:fontFamily="@font/montserrat_bold"
            android:text="test" />

        <com.example.moviebooking.domain.common.ShowMoreTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/content"
            android:textSize="@dimen/_13sdp"
            android:textColor="@color/ThemeSecondary"
            android:fontFamily="@font/montserrat" />

    </LinearLayout>

</LinearLayout>