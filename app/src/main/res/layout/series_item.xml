<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_200sdp"
        android:orientation="horizontal"
        android:weightSum="5"
        android:background="@color/ThemePrimary"
        android:layout_marginBottom="@dimen/_5sdp">

        <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="match_parent"
            app:cardCornerRadius="@dimen/_10sdp">

            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/backdropPathIV"
                android:scaleType="centerCrop" />

        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="3"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="@dimen/_5sdp"
            android:paddingEnd="0dp">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@id/nameTV"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Teen Titans Go"
                android:lines="2"
                android:textColor="@color/ThemeSecondary"
                android:fontFamily="@font/montserrat_bold"
                android:textSize="@dimen/textSize_header" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@id/voteAverage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="8"
                android:textSize="@dimen/textSize_normal"
                android:fontFamily="@font/montserrat"
                android:textColor="@color/ThemeSecondary"
                android:drawableEnd="@drawable/ic_score"/>

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@id/genreTV"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Horor, Action"
                android:textSize="@dimen/textSize_normal"
                android:fontFamily="@font/montserrat"
                android:textColor="@color/ThemeSecondary"
                android:drawableEnd="@drawable/ic_genre"
                android:layout_marginTop="@dimen/_5sdp"/>

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@id/overview"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/textSize_normal"
                android:fontFamily="@font/montserrat"
                android:textColor="@color/ThemeTertiary"
                android:lines="5"/>

        </LinearLayout>

    </LinearLayout>
</layout>
